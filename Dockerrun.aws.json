{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "samjbro/koel-client",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "samjbro/polygon-nginx",
      "essential": true,
      "hostname": "nginx",
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client"],
      "memory": 128
    }
  ]
}
